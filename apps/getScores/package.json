{
  "name": "get-scores",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "gcp-build": "npm run build",
    "start": "functions-framework --target=get-scores",
    "test": "jest",
    "dev": "functions-framework --target=get-scores --port=8080",
    "postinstall": "prisma generate --schema node_modules/@itbaf/tournaments-models/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema node_modules/@itbaf/tournaments-models/prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema node_modules/@itbaf/tournaments-models/prisma/schema.prisma",
    "reinstall:clean": "powershell -NoProfile -Command \"if (Test-Path node_modules) { Remove-Item -Recurse -Force node_modules }; if (Test-Path package-lock.json) { Remove-Item -Force package-lock.json }; npm install\""
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.0",
    "@itbaf/tournaments-models": "^1.1.1",
    "@prisma/client": "^5.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prisma": "^5.18.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}