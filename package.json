{
  "name": "tournaments-api",
  "version": "1.0.0",
  "description": "API de Torneos - Monorepo con Cloud Functions en Google Cloud",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "start": "npm run dev",
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:dist": "find . -name 'dist' -type d -exec rm -rf { } + 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "db:generate": "npm run db:generate -w @api/core-lib",
    "db:migrate": "npm run db:migrate -w @api/core-lib",
    "db:migrate:deploy": "npm run db:migrate:deploy -w @api/core-lib",
    "db:studio": "npm run db:studio -w @api/core-lib",
    "db:seed": "npm run db:seed -w @api/core-lib",
    "db:reset": "npm run db:reset -w @api/core-lib",
    "deploy": "npm run deploy --workspaces --if-present",
    "deploy:getScores": "npm run deploy -w @api/get-scores",
    "deploy:setScores": "npm run deploy -w @api/set-scores",
    "postinstall": "npm run db:generate",
    "check:deps": "npm outdated --workspaces",
    "audit:security": "npm audit --audit-level=moderate",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:ci"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^3.5.1",
    "@prisma/client": "^5.22.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "npm": ">=10.0.0"
  },
  "author": "ITBaf - Development Team",
  "license": "MIT"
}
